args {set color [randcolor]; set word [join $args " "] ;set ret [list]; set dots [string repeat "." [expr {[string length $word]/5 + 2}] ] ;lappend ret [pyramid $dots] ;  lappend ret [center "$color| [string repeat " " [string length $word]] |[color]" [expr {[string length $dots]*9}]]; lappend ret [center "| $word |" [expr {[string length $dots]*9}]]; join $ret \n}
