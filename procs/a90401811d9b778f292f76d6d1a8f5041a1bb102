args {set i -1;set f 0;set s [string range [?? [info procs ST*]] 2 end];set o [?? {l r}];foreach a $args {incr i;if {$s eq "_"} {set s $a;continue};if {$a eq "--"} {incr i;break};switch -glob -- $a {-f* {set f 1} -l* {set o l} -r* {set o r} -s* {set s _} default break}};set u [wrap [join [lrange $args $i end]] 45];set t [eval ST$s];if $f {set t [flip $t]};if {$o eq "r"} {ajoin " " $u "\n\\ " $t} {ajoin " " $t "\n/ " $u}}
